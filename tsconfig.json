{
    "compilerOptions": {
      "outDir": "dist",
      "sourceMap": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "baseUrl": "src",
      "paths": {
        "components": ["components"],
        "utils": ["utils"],
        "types": ["types"]
      },
      "allowSyntheticDefaultImports": true
    },
    "include": ["src"]
}